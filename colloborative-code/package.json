{
  "name": "collaborative-code",
  "displayName": "Collaborative Code",
  "description": "Collaborative code editing VS Code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:collaborative.startSession"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "collaborative.startSession",
        "title": "Start Collaboration Session"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npx webpack",
    "watch": "npx webpack --watch",
    "package": "npx webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-cli": "^0.0.11",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
